{
  "name": "playwright-automation-portfolio",
  "version": "1.0.0",
  "description": "Automated testing portfolio using Playwright with Page Object Model architecture",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:report": "npx playwright show-report",
    "test:codegen": "npx playwright codegen https://example.com",
    "test:chrome": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:safari": "npx playwright test --project=webkit",
    
    "test:smoke": "npx playwright test --grep '@smoke'",
    "test:smoke:ui": "npx playwright test --grep '@smoke.*@ui'",
    "test:smoke:api": "npx playwright test --grep '@smoke.*@api'",
    "test:regression": "npx playwright test --grep '@regression'",
    "test:a11y": "npx playwright test --grep '@a11y'",
    "test:visual": "npx playwright test --grep '@visual'",
    "test:responsive": "npx playwright test --grep '@responsive'",
    
    "test:api": "npx playwright test --grep '@api'",
    "test:mock": "npx playwright test --grep '@mock'",
    "test:edge": "npx playwright test --grep '@edge'",
    "test:contract": "npx playwright test --grep '@api.*@mock'",
    "test:integration": "npx playwright test --grep '@integration'",
    
    "test:smoke:headed": "npx playwright test --grep '@smoke' --headed",
    "test:smoke:chrome": "npx playwright test --grep '@smoke' --project=chromium --headed",
    "test:api:chrome": "npx playwright test --grep '@api' --project=chromium",
    "test:mock:chrome": "npx playwright test --grep '@mock' --project=chromium",
    
    "test:update-snapshots": "npx playwright test --grep '@visual' --update-snapshots",
    "install:browsers": "npx playwright install",
    "install:deps": "npm install && npx playwright install",
    "clean": "rimraf reports test-results",
    "clean:safe": "node -e \"const fs = require('fs'); ['reports', 'test-results'].forEach(dir => { try { if (fs.existsSync(dir)) { console.log('Cleaning:', dir); fs.rmSync(dir, {recursive: true, force: true}); }} catch(e) { console.log('Skip:', dir, e.message); }});\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "e2e",
    "typescript",
    "page-object-model",
    "pom",
    "qa",
    "web-testing",
    "accessibility",
    "visual-regression",
    "api-testing",
    "mocking"
  ],
  "author": "Diego Cantoral",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "allure-commandline": "^2.24.1",
    "allure-playwright": "^2.15.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-playwright": "^0.16.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.0",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/playwright-automation.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/playwright-automation/issues"
  },
  "homepage": "https://github.com/tu-usuario/playwright-automation#readme"
}